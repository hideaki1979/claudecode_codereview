{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && npm run format 2>/dev/null || echo 'âš ï¸ Format skipped'",
            "timeout": 30000
          },
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && npm run lint --fix 2>/dev/null || echo 'âš ï¸ Lint skipped'",
            "timeout": 30000
          },
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && npm run type-check 2>/dev/null || echo 'âš ï¸ Type check skipped'",
            "timeout": 30000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âœ… Claude Code session completed!'"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸš€ PR Review System - Session started'"
          },
